<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="lab8.client.gui.dialog.AddTicketController"
           styleClass="transparent-scroll-pane"
           stylesheets="@../global_style.css"
           fitToWidth="true" fitToHeight="true"
           hbarPolicy="NEVER"
           style="-fx-background-color: transparent; -fx-border-color: transparent;">
    <VBox spacing="20" alignment="CENTER" styleClass="root">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
        
        <VBox styleClass="card" spacing="15">
            <padding>
                <Insets top="25" right="30" bottom="25" left="30"/>
            </padding>

            <Text fx:id="titleText" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-fill: #e0e0e0;"/>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label fx:id="commandTypeLabel" style="-fx-text-fill: #e0e0e0;"/>
                <ComboBox fx:id="commandTypeBox" styleClass="combo-box" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
            </HBox>

            <GridPane hgap="15" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" maxWidth="150"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Имя билета" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label fx:id="coordinateXLabel" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="coordinateXField" promptText="Число (double)" GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <Label fx:id="coordinateYLabel" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="coordinateYField" promptText="Число (float)" GridPane.rowIndex="2"
                           GridPane.columnIndex="1"/>

                <Label fx:id="priceLabel" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="priceField" promptText="Число (double)" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label fx:id="refundableLabel" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <CheckBox fx:id="refundableBox" styleClass="check-box" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label fx:id="typeLabel" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <ComboBox fx:id="typeBox" styleClass="combo-box" GridPane.rowIndex="5"
                          GridPane.columnIndex="1" maxWidth="Infinity"/>

                <Label fx:id="passportIdLabel" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="passportIdField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label fx:id="hairColorLabel" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ComboBox fx:id="hairColorBox" styleClass="combo-box" GridPane.rowIndex="7"
                          GridPane.columnIndex="1" maxWidth="Infinity"/>

                <Label fx:id="birthdayLabel" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <DatePicker fx:id="birthdayDatePicker" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="cancelButton" onAction="#handleCancel" prefWidth="100"
                        styleClass="button-destructive"/>
                <Button fx:id="addButton" onAction="#handleAdd" prefWidth="100"
                        styleClass="button-primary"/>
            </HBox>

            <ScrollPane fx:id="statusScrollPane" fitToWidth="true" minHeight="50" maxHeight="150" visible="false"
                        managed="false" styleClass="transparent-scroll-pane">
                <VBox alignment="CENTER" spacing="5">
                    <Label fx:id="statusLabel" wrapText="true" styleClass="error-message" maxWidth="Infinity"/>
                </VBox>
            </ScrollPane>
        </VBox>
    </VBox>
</ScrollPane>