<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="lab8.client.gui.dialog.VisualizationController"
            styleClass="root"
            stylesheets="@../global_style.css"
            prefWidth="800" prefHeight="600">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 10 5 10;">
            <Button fx:id="closeButton" onAction="#handleClose" styleClass="button-destructive"/>
            <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="infoLabel"/>
        </HBox>
    </top>

    <center>
        <Pane fx:id="visualizationPane" VBox.vgrow="ALWAYS">
            <!-- Здесь будут отображаться визуальные элементы коллекции -->
        </Pane>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5 10 10 10;" styleClass="status-bar">
            <Label fx:id="statusLabel" styleClass="status-message"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="countLabel"/>
        </HBox>
    </bottom>
</BorderPane> 